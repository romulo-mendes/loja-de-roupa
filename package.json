{
  "name": "clothing-store",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "backup:create": "chmod +x scripts/backup-database.sh && ./scripts/backup-database.sh",
    "backup:restore": "echo 'Para restaurar: docker exec -i clothing_store_db psql -U clothing_admin -d clothing_store < backup.sql'",
    "build": "next build",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:studio": "prisma studio",
    "dev": "next dev",
    "docker:cleanup": "chmod +x scripts/docker-cleanup.sh && ./scripts/docker-cleanup.sh",
    "docker:logs": "docker-compose logs -f",
    "docker:ps": "docker-compose ps",
    "docker:restart": "docker-compose restart",
    "docker:setup": "chmod +x scripts/docker-setup.sh && ./scripts/docker-setup.sh",
    "docker:start": "docker-compose up -d",
    "docker:stop": "docker-compose down",
    "lint": "next lint",
    "reset": "npm run docker:cleanup && npm run setup",
    "setup": "npm install && npm run docker:setup && npm run db:generate && npm run db:migrate && npm run db:seed",
    "setup:dev": "npm run docker:start && npm run db:generate && npm run db:push && npm run db:seed",
    "start": "next start"
  },
  "dependencies": {
    "@prisma/client": "latest",
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-sheet": "^1.0.4",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-toast": "^1.1.5",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.454.0",
    "next": "14.2.16",
    "prisma": "^5.7.1",
    "react": "^18",
    "react-dom": "^18",
    "tailwind-merge": "^2.5.5",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@types/node": "^22",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "autoprefixer": "^10.0.1",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "postcss": "^8.5",
    "tailwindcss": "^3.3.0",
    "tsx": "^4.6.2",
    "typescript": "^5"
  }
}